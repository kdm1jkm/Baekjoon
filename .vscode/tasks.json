{
  "tasks": [
    {
      "type": "shell",
      "label": "compile",
      "command": "gcc ${file} -o ${workspaceFolder}/executables/${relativeFileDirname}/${fileBasenameNoExtension}.out -Wall -std=c99 -lm",
      "problemMatcher": ["$gcc"],
      "dependsOn": ["makedir"]
    },
    {
      "type": "shell",
      "label": "compile debug",
      "command": "gcc ${file} -o ${workspaceFolder}/executables/${relativeFileDirname}/${fileBasenameNoExtension}.out -Wall -std=c99 -lm -g",
      "problemMatcher": ["$gcc"],
      "dependsOn": ["makedir"]
    },
    {
      "type": "shell",
      "label": "run",
      "command": "${workspaceFolder}/executables/${relativeFileDirname}/${fileBasenameNoExtension}.out",
      "options": {
        "cwd": "${fileDirname}"
      },
      "dependsOn": ["compile"]
    },
    {
      "type": "shell",
      "label": "clean",
      "command": "rm ${workspaceFolder}/executables"
    },
    {
      "type": "shell",
      "label": "makedir",
      "command": "if [ ! -d ${workspaceFolder}/executables/${relativeFileDirname} ]; then mkdir -p ${workspaceFolder}/executables/${relativeFileDirname}; fi",
      "hide": true
    }
  ],
  "version": "2.0.0"
}
